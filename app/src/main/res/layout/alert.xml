<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:padding="@dimen/twenty_dips"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mmv">

    <LinearLayout
        style="@style/mwh">

        <ImageView
            android:id="@+id/dialog_imageview"
            android:layout_weight="1"
            android:layout_width="@dimen/zero_dips"
            android:layout_height="@dimen/one_fifty_dips"
            android:src="@drawable/confused_one" />
        <TextView
            android:fontFamily="@font/coiny"
            android:gravity="center"
            android:textSize="@dimen/thirty_sp"
            android:text="@string/_1011100011"
            android:layout_weight="2"
            android:layout_width="@dimen/zero_dips"
            android:layout_height="@dimen/one_fifty_dips"/>
    </LinearLayout>

    <TextView
        android:padding="@dimen/eight_dips"
        android:id="@+id/welcome"
        android:fontFamily="@font/coiny"
        android:text="@string/wonder"
        android:layout_margin="@dimen/four_dips"
        style="@style/mw"
        android:textSize="@dimen/fourteen_sp"/>

</LinearLayout>