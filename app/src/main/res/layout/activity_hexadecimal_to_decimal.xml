<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hexadecimal_to_decimal_activity_drawer_layout"
    style="@style/mm"
    tools:context="com.example.android.bits20.HexadecimalToDecimalActivity">

    <ScrollView style="@style/mm"
        android:background="@drawable/background_gradient">

        <LinearLayout style="@style/mmv">

            <android.support.v7.widget.Toolbar
                android:id="@+id/hexadecimal_to_decimal_activity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/colorPrimary"
                android:theme="@style/AppbarTheme"
                app:titleTextColor="@color/white"/>

            <TextView
                style="@style/mw"
                android:text="Hexadecimal to decimal"
                android:textSize="35sp" />
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        app:itemTextColor="@color/white"
        android:background="@drawable/background_gradient"
        android:id="@+id/hexadecimal_to_decimal_activity_navigation_view"
        style="@style/wm"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/third_activity_drawer_header"
        app:menu="@menu/conversion_tutorial_drawer_menu" />

</android.support.v4.widget.DrawerLayout>
